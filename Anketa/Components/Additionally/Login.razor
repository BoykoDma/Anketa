@using Anketa.Services
@using Microsoft.AspNetCore.Components
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Authorization
@inject LogAndRegServices AuthService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

@* @rendermode InteractiveServer *@

@if (isVisible)
{
    @if (!isRegistration)
    {
        <div class="dialog-overlay" @onclick="CloseDialog">
            <div class="dialog-content" @onclick:stopPropagation="true">
                <div class="dialog-header">
                    <h3>Вход в систему</h3>
                    <button class="dialog-close" @onclick="CloseDialog">×</button>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <EditForm Model="loginModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="loginName">Логин:</label>
                        <InputText id="loginName" @bind-Value="loginModel.Name"
                                   class="form-control" placeholder="Введите логин" />
                    </div>

                    <div class="form-group">
                        <label for="loginPassword">Пароль:</label>
                        <InputText id="loginPassword" type="password" @bind-Value="loginModel.Password"
                                   class="form-control" placeholder="Введите пароль" />
                    </div>

                    <div class="dialog-buttons">
                        <button type="submit" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span>Вход...</span>
                            }
                            else
                            {
                                <span>Войти</span>
                            }
                        </button>
                    </div>

                    <div class="register-section">
                        <a href="#" class="register-link" @onclick="ToggleRegistration" @onclick:preventDefault>
                            Зарегистрироваться
                        </a>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    @if (isRegistration)
    {
        <div class="dialog-overlay" @onclick="CloseDialog">
            <div class="dialog-content" @onclick:stopPropagation="true">
                <div class="dialog-header">
                    <h3>Регистрация</h3>
                    <button class="dialog-close" @onclick="CloseDialog">×</button>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <EditForm Model="registerModel" OnValidSubmit="HandleRegistration">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="regName">Логин:</label>
                        <InputText id="regName" @bind-Value="registerModel.Name"
                                   class="form-control" placeholder="Введите логин" />
                    </div>

                    <div class="form-group">
                        <label for="regEmail">Email:</label>
                        <InputText id="regEmail" @bind-Value="registerModel.Email"
                                   class="form-control" placeholder="Введите Email" />
                    </div>

                    <div class="form-group">
                        <label for="regPassword">Пароль:</label>
                        <InputText id="regPassword" type="password" @bind-Value="registerModel.Password"
                                   class="form-control" placeholder="Введите пароль" />
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Повторите пароль:</label>
                        <InputText id="confirmPassword" type="password" @bind-Value="confirmPassword"
                                   class="form-control" placeholder="Повторите пароль" />
                    </div>

                    <div class="dialog-buttons">
                        <button type="submit" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span>Регистрация...</span>
                            }
                            else
                            {
                                <span>Зарегистрироваться</span>
                            }
                        </button>
                    </div>

                    <div class="register-section">
                        <a href="#" class="register-link" @onclick="ToggleRegistration" @onclick:preventDefault>
                            Уже есть аккаунт?
                        </a>
                    </div>
                </EditForm>
            </div>
        </div>
    }
}

@code {
    [Parameter] public bool isVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }

    private bool isRegistration = false;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string confirmPassword = string.Empty;

    private LoginModel loginModel = new LoginModel();
    private RegisterModel registerModel = new RegisterModel();

    private void ToggleRegistration()
    {
        isRegistration = !isRegistration;
        errorMessage = string.Empty;
        loginModel = new LoginModel();
        registerModel = new RegisterModel();
        confirmPassword = string.Empty;
    }

    private async Task CloseDialog()
    {
        isVisible = false;
        isRegistration = false;
        errorMessage = string.Empty;
        loginModel = new LoginModel();
        registerModel = new RegisterModel();
        confirmPassword = string.Empty;
        await IsVisibleChanged.InvokeAsync(isVisible);
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var result = await AuthService.LoginUser(loginModel.Name, loginModel.Password);
            if (result)
            {
                await CloseDialog();
                Navigation.NavigateTo(Navigation.Uri, true);
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleRegistration()
    {
        if (registerModel.Password != confirmPassword)
        {
            errorMessage = "Пароли не совпадают";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var result = await AuthService.RegisterUser(registerModel.Name, registerModel.Email, registerModel.Password);
            if (result)
            {
                await AuthService.LoginUser(registerModel.Name, registerModel.Password);
                await CloseDialog();
                Navigation.NavigateTo("/", true);
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Введите логин")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Введите пароль")]
        public string Password { get; set; } = string.Empty;
    }

    public class RegisterModel
    {
        [Required(ErrorMessage = "Введите логин")]
        [StringLength(20, MinimumLength = 3, ErrorMessage = "Логин должен быть от 3 до 20 символов")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Введите email")]
        [EmailAddress(ErrorMessage = "Введите корректный email")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Введите пароль")]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Пароль должен быть не менее 6 символов")]
        public string Password { get; set; } = string.Empty;
    }
}



