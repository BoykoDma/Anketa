</style>

@code {
    private bool isCollapsed = false;
    private bool isHovering = false;
    private bool isDarkMode = true;
    private System.Threading.Timer? autoHideTimer;
    private const int AUTO_HIDE_DELAY = 300; // мс

    private void ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
        isHovering = false; // Сбрасываем состояние наведения при клике
    }

    private void OnMouseEnter()
    {
        // При наведении на меню - сбрасываем таймер автоскрытия
        StopAutoHideTimer();
        isHovering = true;
    }

    private void OnMouseLeave()
    {
        // При уходе курсора с меню - запускаем таймер автоскрытия
        if (isCollapsed && isHovering)
        {
            StartAutoHideTimer();
        }
    }

    private void OnTriggerEnter()
    {
        // При наведении на триггерную область - показываем меню
        if (isCollapsed && !isHovering)
        {
            isHovering = true;
            StopAutoHideTimer();
        }
    }

    private void OnTriggerLeave()
    {
        // При уходе с триггерной области - скрываем меню
        if (isCollapsed && isHovering)
        {
            StartAutoHideTimer();
        }
    }

    private void StartAutoHideTimer()
    {
        autoHideTimer?.Dispose();
        autoHideTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                isHovering = false;
                StateHasChanged();
            });
        }, null, AUTO_HIDE_DELAY, Timeout.Infinite);
    }

    private void StopAutoHideTimer()
    {
        autoHideTimer?.Dispose();
        autoHideTimer = null;
    }

    private void ToggleTheme()
    {
        isDarkMode = !isDarkMode;
    }

    public void Dispose()
    {
        StopAutoHideTimer();
    }
