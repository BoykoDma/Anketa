        </div>

        <!-- Правая часть - кнопка входа/аватар -->
        <div class="navbar-right">
            <ButtonLogin />
        </div>
    </header>

    <!-- Основной контент страницы -->
    <main class="app-main">
        @Body
    </main>

</div>

<style>
    /* Сброс и базовые стили */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        background: #0f172a;
        color: #e2e8f0;
        overflow-x: hidden;
    }

    /* Основной контейнер приложения */
    .app-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    }

    /* Горизонтальный Navbar */
    .app-navbar {
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        height: 70px;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
        z-index: 1000;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .navbar-left {
        display: flex;
        align-items: center;
        gap: 40px;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 12px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .logo-container:hover {
            transform: scale(1.05);
        }

    .logo-icon {
        width: 32px;
        height: 32px;
        color: #60a5fa;
        filter: drop-shadow(0 0 8px rgba(96, 165, 250, 0.5));
    }

    .brand-name {
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(135deg, #60a5fa 0%, #38bdf8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.5px;
    }

    /* Горизонтальная навигация */
    .horizontal-nav {
        display: flex;
        align-items: center;
        gap: 2px;
        height: 100%;
    }

        .horizontal-nav .nav-link {
            position: relative;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 0 20px;
            height: 70px;
            color: #cbd5e1;
            text-decoration: none;
            transition: all 0.3s ease;
            border-bottom: 3px solid transparent;
        }

            .horizontal-nav .nav-link:hover {
                color: #ffffff;
                background: rgba(255, 255, 255, 0.05);
                border-bottom-color: rgba(96, 165, 250, 0.3);
            }

            .horizontal-nav .nav-link.active {
                color: #ffffff;
                background: linear-gradient(180deg, rgba(96, 165, 250, 0.1) 0%, transparent 100%);
                border-bottom-color: #60a5fa;
            }

        .horizontal-nav .nav-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .horizontal-nav .nav-icon svg {
                width: 18px;
                height: 18px;
                color: #94a3b8;
            }

        .horizontal-nav .nav-link.active .nav-icon svg {
            color: #60a5fa;
            filter: drop-shadow(0 0 8px rgba(96, 165, 250, 0.5));
        }

        .horizontal-nav .nav-text {
            font-size: 14px;
            font-weight: 500;
            white-space: nowrap;
        }

        .horizontal-nav .nav-badge {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
            font-size: 10px;
            font-weight: 700;
            padding: 2px 8px;
            border-radius: 10px;
            animation: pulse 2s infinite;
        }

    .navbar-right {
        display: flex;
        align-items: center;
    }

    /* Основной контент */
    .app-main {
        flex: 1;
        padding: 30px;
        min-height: calc(100vh - 140px); /* Высота минус navbar и footer */
    }

    .content-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
        background: rgba(15, 23, 42, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        min-height: calc(100vh - 200px);
    }

    /* Футер */
    .app-footer {
        height: 70px;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 24px;
        z-index: 1000;
    }

    .footer-content {
        width: 100%;
        max-width: 1200px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .footer-logo-icon {
        width: 20px;
        height: 20px;
        color: #60a5fa;
    }

    .footer-brand {
        font-size: 14px;
        font-weight: 600;
        color: #94a3b8;
    }

    .footer-info {
        display: flex;
        align-items: center;
        gap: 16px;
        font-size: 12px;
        color: #64748b;
    }

    .footer-version {
        background: rgba(96, 165, 250, 0.1);
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
    }

    /* Анимации */
    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.7);
        }

        70% {
            box-shadow: 0 0 0 6px rgba(245, 158, 11, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(245, 158, 11, 0);
        }
    }

    /* Адаптивность */
    @@media (max-width: 1024px) {
        .app-navbar {
            padding: 0 20px;
        }

        .navbar-left {
            gap: 25px;
        }

        .horizontal-nav .nav-link {
            padding: 0 15px;
        }

        .app-main {
            padding: 20px;
        }

        .content-container {
            padding: 25px;
        }
    }

    @@media (max-width: 768px) {
        .app-navbar {
            flex-direction: column;
            height: auto;
            padding: 15px;
            gap: 15px;
        }

        .navbar-left {
            width: 100%;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .horizontal-nav {
            width: 100%;
            justify-content: center;
            margin-top: 10px;
        }

            .horizontal-nav .nav-link {
                flex: 1;
                justify-content: center;
                padding: 0 10px;
                height: 50px;
            }

        .navbar-right {
            width: 100%;
            justify-content: center;
        }

        .app-main {
            padding: 15px;
            min-height: calc(100vh - 200px);
        }

        .content-container {
            padding: 20px;
            border-radius: 15px;
        }

        .footer-content {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }
    }

    @@media (max-width: 480px) {
        .horizontal-nav .nav-text {
            font-size: 12px;
        }

        .horizontal-nav .nav-icon {
            display: none;
        }

        .brand-name {
            font-size: 20px;
        }

        .app-main {
            padding: 10px;
        }

        .content-container {
            padding: 15px;
        }
    }
</style>